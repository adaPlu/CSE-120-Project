<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin">


    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="395dp"
        android:layout_height="638dp"
        android:layout_above="@+id/btnBatchComplete"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"

        android:layout_marginBottom="-3dp" />

    <TextView
        android:id="@+id/txtBarcodeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBatchComplete"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="0dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="243dp"

        android:layout_marginBottom="0dp"
        android:text="@string/no_barcode"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
    <Button
        android:id="@+id/btnRow"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="175dp"
        android:layout_marginBottom="0dp"
        android:text="@string/row" />

    <Button
        android:id="@+id/btnBatchComplete"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="235dp"
        android:text="@string/batch_complete" />

    <Button
        android:id="@+id/btnScanningComplete"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="71dp"
        android:text="@string/scan_complete" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="305dp"
        android:text="@string/exit" />

    <Button
        android:id="@+id/btnSec"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:text="Sec"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btnClearBatch"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="clear batch"
        android:layout_marginStart="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btnClearLastScan"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="@string/clear_scan"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/centerLayout"
        android:layout_width="241dp"
        android:layout_height="413dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/border_green">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red" />
    </RelativeLayout>
</RelativeLayout>
